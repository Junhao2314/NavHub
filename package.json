{
  "name": "navhub",
  "repository": {
    "type": "git",
    "url": "https://github.com/Junhao2314/NavHub"
  },
  "private": true,
  "version": "1.0.5",
  "type": "module",
  "scripts": {
    "doctor": "node scripts/doctor.mjs",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "typecheck": "tsc -p tsconfig.json --noEmit && tsc -p worker/tsconfig.json --noEmit",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check --write .",
    "eol:check": "git ls-files --eol | node scripts/eol.mjs check",
    "eol:fix": "git ls-files --eol | node scripts/eol.mjs fix",
    "deploy:workers": "npm run build && wrangler deploy",
    "deploy:pages": "npm run build && wrangler pages deploy dist --project-name=navhub",
    "kv:create": "wrangler kv:namespace create NAVHUB_WORKER_KV",
    "dev:workers": "npm run build && wrangler dev",
    "dev:pages": "npm run build && wrangler pages dev dist --compatibility-date=2024-01-01"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.1.0",
    "@dnd-kit/sortable": "^8.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@fontsource/manrope": "^5.2.8",
    "@fontsource/outfit": "^5.2.8",
    "@google/genai": "^1.30.0",
    "croner": "^10.0.1",
    "i18next": "^25.8.0",
    "lucide-react": "^0.563.0",
    "lunar-javascript": "^1.7.7",
    "luxon": "^3.7.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-i18next": "^16.5.4",
    "react-virtuoso": "^4.18.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@cloudflare/workers-types": "^4.20241230.0",
    "@playwright/test": "^1.58.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "fast-check": "^4.5.3",
    "jsdom": "^28.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^4.0.18",
    "wrangler": "^4.61.0"
  }
}
